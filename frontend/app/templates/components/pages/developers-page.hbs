<h5><span id="notice" class="label label-success">{{flash-message}}</span></h5>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Snapchat username</th>
    <th>Full name</th>
    <th>About</th>
  </tr>
  </thead>

  <tbody>
  {{#each model as |developer|}}
    <tr>
      <td data-toggle="modal" data-target="#snapmodal<%= developer.id %>">
          <span class="snapchat-username">
            {{developer.snapchatUsername}}
          </span>
      </td>
      <td>{{developer.fullName}}</td>
      <td>{{developer.about}}</td>
    </tr>

    <div class="modal fade" id="snapmodal<%= developer.id %>">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <center><h1>{{developer.fullName}}</h1></center>
            <center><h4 class="blockquote-footer">{{developer.about}}</h4></center>
          </div>
          <center>
            <div class="modal-body">
              {{#if developer.snapcodeImage }}
                {{developer.snapcodeImage}}
              {{else}}
                <img src="https://feelinsonice-hrd.appspot.com/web/deeplink/snapcode?username=#{ developer.snapchatUsername }&type=PNG">
              {{/if}}
              <h2>{{developer.snapchatUsername}}</h2>
            </div>
          </center>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger-outline" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
  </tbody>
</table>

